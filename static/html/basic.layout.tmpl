{{define "basic"}}
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width,minimum-scale=1,maximum-scale=10">
        <title>{{template "title" .}}</title>
        <link rel="stylesheet" href="/static/css/style.css"> 
        <script src="../js/main.js"></script>
    </head>
    <body>
    <div class="content-wrapper">
        <header class="header">
			<table class="hdbtn">
				<tr>
					<td><a class="logo" href="/">Knight Casino</a></td>
					<td>
						<a class="buttonNavigation" href="/roulette">Roulette</a>
						<a class="buttonNavigation" href="/dice">Dice</a>
					</td>
					{{template "sign-btn" .}}
				</tr>
			</table>
        </header>

        <div class="container clearfix">
            <main class="content">
			{{ template "content" .}}
            </main>
            <aside class="sidebar sidebar1">
				<div class="msg"></div>
				<div class="snd-msg">
					<input class="message-input" name="message" type="text" placeholder="Enter Message">
					<p>
					<button class="button-input">Send Message</button>
				</div>
            </aside>
            <aside class="sidebar sidebar2">
                <div class="right-menu">
					<a href="/roulette"></a>
					<a href="/dice"></a>
					<a href="#"></a>
					<a href="#"></a>
                </div>
            </aside>
        </div>

        <footer class="footer">
            <p> &copy; All right reserved by SingleKnight group.
        </footer>
    </div>  
    </body>
</html>
{{end}}