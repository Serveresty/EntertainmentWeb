{{define "basic"}}
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width,minimum-scale=1,maximum-scale=10">
        <title>{{template "title" .}}</title>
        <link rel="stylesheet" href="/static/css/style.css"> 
        <script src="../js/main.js"></script>
    </head>
    <body>
    <div class="content-wrapper">
        <header class="header">
			<table class="hdbtn">
				<tr>
					<td><a class="logo" href="/">Knight Casino</a></td>
					{{if not .LoginFlagAccept}}<td align="right" style="width: 25%"><a class="buttonLog" href="/main-sign">Sign In/Sign Up</a></td>{{end}}
                    {{if .LoginFlagAccept}}<td align="right"><span class="balance">{{ .balance }} $</span></td><td align="right" style="width: 15%"> <a class="buttonLog" href="/profile">My profile</a>   <a class="buttonLog" href="/logout">Exit</a></td>
                    {{end}}
				</tr>
			</table>
        </header>

        <div class="container clearfix">
            <main class="content">
			{{ template "content" .}}
            </main>
            <aside class="sidebar sidebar1">
				<div class="msg"></div>
				<div class="snd-msg">
					<input class="message-input" name="message" type="text" placeholder="Enter Message">
					<p>
					<button class="button-input">Send Message</button>
				</div>
            </aside>
            <aside class="sidebar sidebar2">
                <div class="right-menu">
					<a href="/dice" style="margin-left: 28px;"></a>
                    <p>
                    <a href="/roulette" style="margin-left: 28px"></a>
                    <p>
					<a href="#" style="margin-left: 28px"></a>
                    <p>
					<a href="#" style="margin-left: 28px"></a>
                </div>
            </aside>
        </div>

        <footer class="footer">
            <p> &copy; All right reserved by SingleKnight group.
        </footer>
    </div>  
    </body>
</html>
{{end}}