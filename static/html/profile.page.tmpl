{{template "basic" .}}

{{define "title"}}Profile{{end}}

{{define "content"}}
<table>
    <tr>
        <td>
            <div class="profile">
                <div class="avatar">
                </div>
                <div class="stats">
                    Username: {{ .username}}<br>
                    Email: {{ .email }} <br>
                    Balance: {{ .balance}} $
                </div>

                <div class="GameHistory">
                    <div class="gm-hs">Game History</div>
                </div>
            </div>
        </td>
        <td>
            <div class="cash"></div>
        </td>
    </tr>
</table>
{{end}}