{{template "basic" .}}

{{define "title"}}Dice Game{{end}}

{{define "content"}}

{{if not .LoginFlagAccept}}<div class="Cant-to-play-without-register">Sign In or Sign Up to Start Game</div>{{end}}

{{if .LoginFlagAccept}}
<table class="DiceRoll">
<tr>
<td>
<div class="roll">
	<label id="resultDice">0000</label>
</div>
</td>
<tr>
<td>
<div class="DiceSettings">
	<table class="settings">
		<tr>
			<td><label>BetAmount</label><input name="betamount" id="BetAmount" type="number" min="0" placeholder="Bet Amount" value="1" oninput='BetEdit(this.value)' required /></td>
			<td><br><button class="start" onclick="start()">START</button></td>
			<td><label>Profit</label><input name="profit" id="Profit" type="number" step="0.01" min="1" value="" required readonly/></td>
		</tr>

		<tr>
			<td><label>Range</label><input name="range" id="Range" type="number" step="0.01" min="0.01" max="94" value="47.50" oninput='RangeEdit(this.value)' required /></td>
			<td><label>Multiply</label><input name="multy" id="Multiply" type="number" step="0.01" min="1" value="2" oninput='MultiplyEdit(this.value)' required /></td>
			<td><label>Win Chance</label><input name="winchance" id="WinChance" maxlength="2" type="number" step="0.01" min="0" max="94" value="47.50" oninput='WinChanceEdit(this.value)' required /></td>
		</tr>
	</table>
</div>
</td>
</table>
<script src="/static/js/dice.js"></script>
{{end}}

{{end}}